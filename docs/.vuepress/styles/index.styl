// import this file as a stylus file here, because this is the only way
// how its styles take precedence over the vuepress theme styles.
@import "btcpayserver-main"

// VuePress Default Theme Overrides
html,
body {
  min-height: 100vh;
}

body {
  font-size: 16px;
}

// styles originating from .btcpay-header
.navbar {
  color: var(--btcpay-header-color);
  background-color: var(--btcpay-header-bg);
}

.navbar a {
  color: var(--btcpay-header-color-link);
  text-decoration: none;
}

.navbar a:focus,
.navbar a:hover {
  color: var(--btcpay-header-color-link-accent);
}

:root[data-btcpay-theme="dark"] a.nav-link[rel]:before {
  filter: contrast(0) brightness(200%);
}

@media (prefers-color-scheme: dark) {
  :root:not([data-btcpay-theme="light"]) a.nav-link[rel]:before {
    filter: contrast(0) brightness(200%);
  }
}

// image zoom
.medium-zoom--opened .medium-zoom-overlay {
  background: var(--btcpay-header-bg) !important;
  opacity: .9 !important;
}

#app
  // Max-width, centered layout
  .theme-container,
  .navbar {
    max-width: 1280px;
    margin: 0 auto;
  }

  .navbar:before {
    content: "";
    position: fixed;
    z-index: -1;
    top: 0;
    left: 0;
    right: 0;
    background-color: var(--btcpay-header-bg);
    height: 58px;
  }

  .sidebar {
    left: auto;
  }

  // Modifications
  .navbar {
    border-color: transparent;
  }

  .navbar .logo {
    min-width: unset;
  }

  .navbar .links {
    background: transparent;
  }

  .navbar a {
    color: var(--btcpay-header-color-link);
  }

  .navbar .search-box {
    order: 10;
    margin: 0 0 0 var(--btcpay-space-s);
  }

  .navbar .search-box input {
    color: var(--btcpay-header-color);
    background-color: var(--btcpay-header-bg);
    border-color: var(--btcpay-border-color-medium);
    font-size: 1rem;

    @media (max-width: 899px) {
      left: 0;
    }
  }

  .navbar .search-box .search-query.ds-hint {
    display: none !important;
  }

  .navbar .btcpay-theme-switch {
    order: 20;
    margin: 0 0 0 var(--btcpay-space-s);
  }

  .nav-links .nav-item {
    margin-left: var(--btcpay-space-xs);
  }

  .nav-links .repo-link {
    display: none;
  }

  .nav-links {
    @media (max-width: 899px) {
      border-bottom-color: var(--btcpay-border-color-medium);
    }
  }

  .nav-links a {
    color: var(--btcpay-header-color-link);

    @media (min-width: 900px) {
      padding: var(--btcpay-space-xs) var(--btcpay-space-s);
      border-bottom: 2px solid transparent;
    }
  }

  .nav-links a svg {
    display: none;
  }

  .nav-links a:hover,
  .nav-links a:focus  {
    color: var(--btcpay-header-color-link-accent);
    border-bottom-color: var(--btcpay-header-color-link-accent);
  }

  .nav-links a.router-link-active {
    color: var(--btcpay-header-color-link-accent);
  }

  a.nav-link[rel*="github"],
  a.nav-link[rel*="twitter"] {
    text-indent: -9999px;
    display: inline-block;
    width: 2.5rem;
    height: 2rem;
    position: relative;
  }

  a.nav-link[rel*="github"]:before,
  a.nav-link[rel*="twitter"]:before {
    position: absolute;
    left: .625rem;
    top: .35rem;
    display: inline-block;
    content: '';
    background-size: cover;
    width: 1.2rem;
    height: 1.2rem;
  }

  a.nav-link[rel*="github"]:before {
    background: url("data:image/svg+xml;base64,");
  }

  a.nav-link[rel*="twitter"]:before {
    background-image: url("data:image/svg+xml;base64,")
  }

  .site-name {
    color: inherit;
  }

  .algolia-autocomplete .ds-dropdown-menu {
    position: fixed !important;
    top: 3.6rem !important;
    bottom: 0 !important;
    right: 0 !important;
    border-radius: 0 !important;
    overflow-y: auto;
    margin: 0;
    border: 0;
    padding: 0 !important;
    color: var(--btcpay-header-color);
    background-color: var(--btcpay-header-bg);
  }

  .algolia-autocomplete .ds-dropdown-menu::before {
    content: none;
  }

  .algolia-autocomplete .ds-dropdown-menu [class^="ds-dataset-"] {
    border-radius: 0;
    background: transparent;
  }

  .algolia-autocomplete .algolia-docsearch-suggestion {
    background: transparent !important;
    border: 0 !important;
  }

  .algolia-autocomplete .algolia-docsearch-suggestion--no-results {
    padding: var(--btcpay-space-m) !important;
  }

  .algolia-docsearch-footer {
    margin: var(--btcpay-space-s) !important;
  }

  .algolia-search-wrapper .algolia-autocomplete .ds-dropdown-menu .ds-suggestion {
    border-color: var(--btcpay-border-color-medium);
  }

  .algolia-docsearch-suggestion--wrapper {
    padding: 0 !important;
  }

  .algolia-autocomplete .algolia-docsearch-suggestion--category-header {
    border-color: var(--btcpay-border-color-light);
  }

  .algolia-search-wrapper .algolia-autocomplete .algolia-docsearch-suggestion .algolia-docsearch-suggestion--subcategory-column {
    color: var(--btcpay-color-light-text) !important;
    background: var(--btcpay-color-light-backdrop) !important;
    border-color: var(--btcpay-border-color-medium);
  }

  .algolia-search-wrapper .algolia-autocomplete .algolia-docsearch-suggestion .algolia-docsearch-suggestion--subcategory-column,
  .algolia-search-wrapper .algolia-autocomplete .algolia-docsearch-suggestion .algolia-docsearch-suggestion--content {
    padding: var(--btcpay-space-xs) var(--btcpay-space-s) !important;

    @media (max-width: 768px) {
      display: block !important;
      width: 100% !important;
      text-align: left !important;
    }
  }

  .algolia-docsearch-suggestion--subcategory-column-text:after {
    content: none;
  }

  .algolia-autocomplete .algolia-docsearch-suggestion--content:before,
  .algolia-autocomplete .algolia-docsearch-suggestion--subcategory-column:before {
    background: var(--btcpay-border-color-medium);
  }

  .ds-cursor .algolia-docsearch-suggestion--content,
  .algolia-search-wrapper .algolia-autocomplete .algolia-docsearch-suggestion--highlight {
    color: var(--btcpay-color-light-text) !important;
    background: var(--btcpay-color-light-backdrop) !important;
  }

  .algolia-search-wrapper .algolia-autocomplete .algolia-docsearch-suggestion .algolia-docsearch-suggestion--subcategory-column-text {
    color: var(--btcpay-color-light-text);
  }

  .algolia-autocomplete .algolia-docsearch-suggestion--text,
  .algolia-search-wrapper .algolia-autocomplete .algolia-docsearch-suggestion .algolia-docsearch-suggestion--title {
    color: var(--btcpay-body-color);
  }

  .algolia-autocomplete .suggestions {
    background: transparent;
  }

  .algolia-autocomplete .suggestions a {
    color: var(--btcpay-header-color-link);
    text-decoration: none;
  }

  .algolia-autocomplete .suggestions a:focus,
  .algolia-autocomplete .suggestions a:hover {
    color: var(--btcpay-header-color-link-accent);
  }

  .sidebar {
    color: var(--btcpay-nav-color-link);
    background: var(--btcpay-body-bg);
    border-color: transparent;
  }

  .sidebar-mask {
    background: var(--btcpay-header-bg);
    opacity: .9;
  }

  .sidebar > .sidebar-links {
    padding: 2.5rem 0;
  }

  .sidebar-group-items,
  .sidebar-group.is-sub-group > .sidebar-heading {
    font-size: .95rem;
  }

  // mimic clickable categories
  .sidebar-group.is-sub-group.collapsable > .sidebar-heading:not(.clickable) {
    opacity: 1;
  }
  .sidebar-group.is-sub-group.collapsable > .sidebar-heading:not(.clickable):hover {
    color: var(--btcpay-nav-color-link-accent);
    cursor: pointer;
  }

  .sidebar-group a.sidebar-link,
  .sidebar-group.is-sub-group > .sidebar-heading {
    padding-left: 1.25rem;
  }

  a.sidebar-link,
  .sidebar-heading.clickable {
    color: var(--btcpay-nav-color-link);
  }

  a.sidebar-link:focus,
  a.sidebar-link:hover,
  .sidebar-heading.clickable:focus,
  .sidebar-heading.clickable:hover {
    color: var(--btcpay-nav-color-link-accent);
  }

  a.sidebar-link.active,
  .sidebar-heading.clickable.active,
  .sidebar-heading.clickable.router-link-exact-active {
    color: var(--btcpay-nav-color-link-active);
    font-weight: 600;
    border-color: transparent;
  }

  a.sidebar-link.active,
  .sidebar-group.depth-1 > .sidebar-heading.clickable.router-link-exact-active  {
    border-color: var(--btcpay-color-primary);
  }

  .arrow.left {
    border-right-color: var(--btcpay-color-neutral-500);
  }

  .arrow.right {
    border-left-color: var(--btcpay-color-neutral-500);
  }

  .arrow.up {
    border-bottom-color: var(--btcpay-color-neutral-500);
  }

  .arrow.down {
    border-top-color: var(--btcpay-color-neutral-500);
  }

  .page-nav,
  .page-edit,
  .theme-default-content:not(.custom) {
    max-width: 780px;
  }

  .theme-default-content:not(.custom) {
    padding: 3.5rem 2.5rem 1rem;
  }

  h2 {
    border-color: var(--btcpay-border-color-medium);
  }

  hr {
    border-color: var(--btcpay-border-color-light);
  }

  figure {
    margin: var(--btcpay-space-m) 0;
  }

  // hide outbound link markers for videos and images
  figure a svg.outbound {
    display: none;
  }

  code {
    font-family: var(--btcpay-font-family-monospace);
    border-radius: var(--btcpay-border-radius);
    color: var(--btcpay-code-color);
    background-color: var(--btcpay-code-bg);
  }

  pre {
    font-family: var(--btcpay-font-family-monospace);
    border-radius: var(--btcpay-border-radius);
    color: var(--btcpay-color-white);
    background-color: #222222;
  }

  pre code {
    color: var(--btcpay-color-white);
    background: transparent;
  }

  th, td {
    border-color: var(--btcpay-border-color-light);
  }

  div[class*="language-"] {
    background: transparent;
    border-radius: var(--btcpay-border-radius);
  }

  tr:nth-child(2n) {
    background-color: transparent;
  }

  .custom-block {
    background-color: var(--btcpay-bg-dark);
  }

  .custom-block a {
    color: inherit;
    text-decoration: underline;
  }

  .custom-block.danger {
    color: var(--btcpay-color-danger-text);
    background: var(--btcpay-color-danger-backdrop);
  }

  .custom-block.warning {
    color: var(--btcpay-color-warning-text);
    background: var(--btcpay-color-warning-backdrop);
  }

  .custom-block.tip {
    color: var(--btcpay-color-info-text);
    background: var(--btcpay-color-info-backdrop);
  }

  .page-edit .edit-link a,
  .page-nav .inner a {
    color: var(--btcpay-color-secondary);
  }

  .page-edit .edit-link a:hover,
  .page-edit .edit-link a:focus,
  .page-nav .inner a:hover,
  .page-nav .inner a:focus {
    color: var(--btcpay-color-secondary-accent);
  }

  .page-nav .inner {
    border-top-color: var(--btcpay-border-color-light);
  }

  .ytEmbed {
    display: block;
    position: relative;
    margin: 1rem 0 2rem;
    height: 0;
    overflow: hidden;
    max-width: 100%;
    padding-bottom: 56.25%;
    background-repeat: no-repeat;
    background-position: 50%;
    background-size: cover;
    background-color: var(--btcpay-bg-dark);
  }

  .ytEmbed:before {
    background: url("data:image/png;base64, ") no-repeat center center;
    background-size: auto;
    background-size: 64px 64px;
    position: absolute;
    height: 100%;
    width: 100%;
    opacity: 0.8;
    transition: all 0.2s ease-out;
    content: '';
    cursor: pointer;
  }

  iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: none;
  }

  iframe[src] {
    display: block;
  }
