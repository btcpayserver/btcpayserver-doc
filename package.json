{
  "name": "btcpayserver-docs",
  "version": "1.0.0",
  "description": "BTCPay Server Official Documentation",
  "author": "BTCPay Server",
  "license": "MIT",
  "bugs": "https://github.com/btcpayserver/btcpayserver-doc/issues",
  "homepage": "https://github.com/btcpayserver/btcpayserver-doc",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/btcpayserver/btcpayserver-doc.git"
  },
  "keywords": [
    "btcpayserver"
  ],
  "config": {
    "dist": "docs/.vuepress/dist",
    "port": "8080",
    "linkcheck": {
      "command": "linkinator -r --concurrency 1 --timeout 2500 --silent --skip (btcpayserver-doc/edit/master/docs|directory.btcpayserver.org|foundation.btcpayserver.org|install.btcpayserver.org|drupal.org|dyn.com|facebook.com|linkedin.com|luxnode.io|pi-hole.net|t.me|wiki.ion.radar.tech|wiki.openstreetmap.org)"
    }
  },
  "scripts": {
    "prestart": "rm -rf $npm_package_config_dist",
    "start": "vuepress dev docs -p $npm_package_config_port",
    "build": "vuepress build docs",
    "test": "jest",
    "linkcheck": "start-server-and-test linkcheck:serve $npm_package_config_port linkcheck:local",
    "linkcheck:serve": "serve -p $npm_package_config_port $npm_package_config_dist",
    "linkcheck:local": "$npm_package_config_linkcheck_command http://localhost:$npm_package_config_port",
    "linkcheck:prod": "$npm_package_config_linkcheck_command https://docs.btcpayserver.org",
    "predeploy": "./prepare-deployment.sh"
  },
  "devDependencies": {
    "@vuepress/plugin-back-to-top": "1.5.2",
    "jest": "26.1.0",
    "linkinator": "2.1.1",
    "markdown-it-implicit-figures": "0.10.0",
    "serve": "11.3.2",
    "start-server-and-test": "1.11.0",
    "vuepress": "1.5.1",
    "vuepress-plugin-clean-urls": "1.1.1",
    "vuepress-plugin-code-copy": "1.0.6",
    "vuepress-plugin-medium-zoom": "1.1.8"
  }
}
